@using LMSystem.Resource
@using LMSystem.Common
@using LMSystem.Models
@model LMSystem.Models.User

@{
    string notFound = (string)ViewData["NotFound"];
    string instruction = (string)ViewData["instruction"];
    string appID = (string)ViewData["appID"];
}

<div class="alert-panel edit-panel">
    <div class="title-bar">
        <span class="close">&times;</span>
    </div>
    @if (notFound != null)
    {
        @notFound
    }
    else
    {
        <form id="authorizeApp" class="form-horizontal" method="post" action="/LeaveApplication/AuthorizeApp">
            @Html.AntiForgeryToken()
            <div class="container-2column">
                <div class="form-group row">
                    <div class="col-sm-4 row">
                        <label class="col-sm-12 col-form-label">@RegionSetting.applicantDesc :</label>
                    </div>
                    <div class="col-sm-8">
                        <input type="hidden" value="@instruction" name="instruction">
                        <input type="hidden" value="@appID" name="appID">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <textarea class="form-control" name="approverDesc" rows="3" maxlength="200" placeholder="<200 chars max>"></textarea>
                    </div>
                </div>


                <div class="content-column">
                    <div class="column-40 column-left">

                    </div>
                    <div class="column-60 column-right">
                        <button type="submit" class="btn-block">
                            @RegionSetting.Edit_SaveChange_Caption
                        </button>
                    </div>
                </div>
            </div>
        </form>
    }

</div>
